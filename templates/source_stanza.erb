  arch arm: 'arm64', intel: 'x86_64'

  on_<%= minimal_macos_version_supported %> :or_newer do
<% package_data.each do |arch, pinfo| -%>
<% if arch == 'arm64' -%>
    on_arm do
<% elsif arch == 'x86_64' -%>
    on_intel do
<% else -%>
<%   continue -%>
<% end -%>
      version "<%= pinfo[:version] %>"
      sha256  "<%= pinfo[:sha256] %>"
    end
<% end -%>
  end

  depends_on macos: '>= :<%= minimal_macos_version_supported %>'

  url "<%= '%s/%s-#{version}-1.macos.all.#{arch}.dmg' % [base_url, pkg] %>"
  pkg "<%= pkg %>-#{version}-1-installer.pkg"
